<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserOffersActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/user_offers_toolbar"/>

    <FrameLayout
        android:id="@+id/offer_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_offers_toolbar">

        <TextView
            android:id="@+id/no_offer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_offer"
            android:layout_gravity="center"/>

        <ListView
            android:id="@+id/user_offer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>