<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUserModification">

    <TextView
        android:id="@+id/new_value_text"
        android:layout_width="400dp"
        android:layout_height="71dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="196dp"
        android:text="@string/new_value"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_value_edittext"
        android:layout_width="521dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/new_value_text"
        app:layout_constraintTop_toBottomOf="@+id/new_value_text" />

    <Button
        android:id="@+id/new_value_button"
        android:layout_width="212dp"
        android:layout_height="84dp"
        android:layout_marginTop="16dp"
        android:onClick="modifyButtonClicked"
        android:text="@string/modify"
        app:layout_constraintEnd_toEndOf="@+id/new_value_edittext"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/new_value_edittext"
        app:layout_constraintTop_toBottomOf="@+id/new_value_edittext" />

    <TextView
        android:id="@+id/new_value_text2"
        android:layout_width="123dp"
        android:layout_height="71dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/new_value_text"
        app:layout_constraintTop_toTopOf="@+id/new_value_text" />

</androidx.constraintlayout.widget.ConstraintLayout>